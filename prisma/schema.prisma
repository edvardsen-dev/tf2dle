datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["linux-musl"]
}

model DailyMaps {
  id           Int      @id @default(autoincrement())
  selectedAt   DateTime @default(now()) @db.Date
  name         String
  startingPosX Float
  startingPosY Float
  hasWon       Int      @default(0)
}

model Logs {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  event     String
  message   String
}

model DailyWeapons {
  id         Int      @id @default(autoincrement())
  selectedAt DateTime @default(now()) @db.Date
  name       String
  hasWon     Int      @default(0)
}

model DailyWeaponsTwo {
  id          Int @id @default(autoincrement())
  selectedAt  DateTime @default(now()) @db.Date
  name        String
  hasWon      Int @default(0)
}

model DailyCosmetics {
  id         Int      @id @default(autoincrement())
  selectedAt DateTime @default(now()) @db.Date
  name       String
  thumbnail  String
  rotation   Int
  usedBy     String
  hasWon     Int      @default(0)
}

model DailyUnusuals {
  id          Int @id @default(autoincrement())
  selectedAt  DateTime @default(now()) @db.Date
  name        String
  thumbnail   String
  rotation    Int
  series      String
  hasWon      Int @default(0)
}
